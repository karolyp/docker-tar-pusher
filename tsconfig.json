{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "types": ["vitest/globals"]
  },
  "exclude": ["src/**/*.test.ts"],
  "include": ["src/**/*"]
}
